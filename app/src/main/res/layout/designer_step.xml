<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Номер шага -->
        <TextView
            android:id="@+id/stepNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Шаг 1"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- Фото шага -->
        <ImageView
            android:id="@+id/stepPhoto"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="centerCrop"
            android:contentDescription="Фото шага"
            android:layout_marginBottom="8dp"
            app:srcCompat="@drawable/belyashi"/>

        <!-- Описание шага -->
        <EditText
            android:id="@+id/stepDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Описание шага"
            android:layout_marginBottom="8dp" />

        <!-- Кнопка для удаления шага -->
        <Button
            android:id="@+id/deleteStepButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Удалить шаг" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>